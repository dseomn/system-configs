core.workflow(
    name = "default",
    mode = "SQUASH",
    authoring = authoring.overwrite("David Mandelberg <david@mandelberg.org>"),
    origin = git.github_origin(
        url = "https://github.com/rook/rook",
        ref = "v1.6.2",
    ),
    origin_files = glob(
        include = [
            "LICENSE",
            "cluster/examples/kubernetes/**",
        ],
    ),
    destination = git.github_pr_destination(
        url = "https://github.com/dseomn/system-configs",
        destination_ref = "public",
    ),
    destination_files = glob(
        include = [
            "third_party/rook/**",
        ],
        exclude = [
            "third_party/rook/copy.bara.sky",
        ],
    ),
    transformations = [
        core.move("", "third_party/rook"),
    ],
)
